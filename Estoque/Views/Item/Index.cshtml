@model IEnumerable<ItemModel>

<div class="container">
    <div class="text-center mb-5">
        <a class="btn btn-success" asp-action="Cadastrar" asp-controller="Item">Cadastrar novo item</a>
    </div>
    <table id="Emprestimos" class="table table-light table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">Imagem</th>
                <th scope="col">Nome</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.Imagem != null)
                                {
                                    <img src="/imagens/@item.Imagem" class="card-img-top" style="width: 50px; height: 50px" />
                                }
                                else
                                {
                                    <img src="..." class="card-img-top" />
                                }
                            </td>
                            <th scope="row">@item.Nome</th>
                            <td>@item.Quantidade</td>
                            <td>@item.Valor</td>
                            <td>
                                <a asp-controller="Item" asp-action="EditarItem" asp-route-id="@item.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                                <a asp-controller="Item" asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>